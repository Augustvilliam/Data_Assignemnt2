<Shell
    x:Class="DataMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DataMauiApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="DataMauiApp">

    <ShellContent Title="Main Menu" ContentTemplate="{DataTemplate local:MainMenuPage}" Route="MainMenuPage" />
    <ShellContent Title="Projects Overview" ContentTemplate="{DataTemplate local:ProjectsPage}" />
    <ShellContent Title="Customer Management" ContentTemplate="{DataTemplate local:CustomerPage}" />
    <ShellContent Title="Employee Management" ContentTemplate="{DataTemplate local:EmployeePage}" />

</Shell>

