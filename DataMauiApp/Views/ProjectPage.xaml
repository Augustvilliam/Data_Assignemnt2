<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataMauiApp.Views.ProjectPage"
             Title="ProjectPage">
    <VerticalStackLayout>
        <Label Text="Project Details" />
        <Entry Placeholder="Name" Text="{Binding CurrentProject.Name, Mode=TwoWay}" />
        <Entry Placeholder="Status" Text="{Binding CurrentProject.Status, Mode=TwoWay}" />
        <Button Text="Save" Command="{Binding SaveProjectCommand, Mode=TwoWay}" />
    </VerticalStackLayout>
</ContentPage>