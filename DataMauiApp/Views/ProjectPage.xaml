<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataMauiApp.Views.ProjectPage"
             Title="ProjectPage">
    <VerticalStackLayout>
        <Label Text="Project Details" />

        <Entry Placeholder="Project Name" 
               Text="{Binding CurrentProject.Name, Mode=TwoWay}"/>


        <Label Text="Selected Customer" />
        <Picker ItemsSource="{Binding Customers}"
                ItemDisplayBinding="{Binding FirstName}"
                SelectedIndex="{Binding SelectedCustomer, Mode=TwoWay}"/>

        <Label Text="Selected Employee" />
        <Picker ItemsSource="{Binding Employees}"
               ItemDisplayBinding="{Binding FirstName}"
               SelectedIndex="{Binding SelectedEmployee, Mode=TwoWay}"/>

        <Label Text="Selected Customer" />
        <Picker ItemsSource="{Binding StatusOptions}"
               SelectedIndex="{Binding SelectedStatus, Mode=TwoWay}"/>

        <Button Text="Save Project" 
                Command="{Binding SaveProjectCommand}" 
                BackgroundColor="Green"
                TextColor="White"/>

        <Button Text="Back"
                Command="{Binding NavigateBackCommand}"
                BackgroundColor="Yellow"
                TextColor="Black"/>



    </VerticalStackLayout>
</ContentPage>