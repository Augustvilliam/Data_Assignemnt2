<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataMauiApp.Views.ProjectPage"
             Title="ProjectPage">

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto, *">
        <Label Text="Project Managment" HorizontalOptions="Center" Grid.ColumnSpan="2"/>

        <Border Grid.Column="0" Margin="10, 60, 10, 10" Padding="10" Stroke="Gray">
            <CollectionView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}"/>
                                <Label Text="{Binding Status}"/>
                                <Label Text="{Binding Customer.FirstName}"/>
                                <Label Text="{Binding Employee.FirstName}"/>
                                <Label Text="{Binding Service.Name}"/>
                                <Label Text="{Binding TotalPrice, StringFormat='Total Cost: {0:C}'}"/>

                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>

        <Border Grid.Column="1" Margin="10, 60, 10, 10" Padding="10" Stroke="Gray">
            <VerticalStackLayout>
                <Entry Margin="20, 10, 20, 20"
                    Placeholder="Project Name" 
                    Text="{Binding SelectedProject.Name, Mode=TwoWay}"/>
                <Editor Margin="20, 10, 20, 20" Placeholder="Enter Project Description" Text="{Binding SelectedProject.Description, Mode=TwoWay}"/>
                
                <Grid Margin="20, 0, 0, 0" RowDefinitions="*,*" ColumnDefinitions="auto,*">
                    <Label Margin="0, 10, 10, 10" Text="Start Date" Grid.Column="0" Grid.Row="0" VerticalOptions="Center"/>
                    <DatePicker Margin="0, 10, 10, 10" Grid.Column="0" Grid.Row="1" Date="{Binding SelectedProject.StartDate, Mode=TwoWay}" />

                    <Label Margin="10, 10, 0, 10" Text="End Date" Grid.Column="1" Grid.Row="0" VerticalOptions="Center"/>
                    <DatePicker Margin="10, 10, 0, 10" Grid.Column="1" Grid.Row="1" Date="{Binding SelectedProject.EndDate, Mode=TwoWay}" />
                </Grid>
      
                
                <Label Text="Selected Customer" Margin="20, 10, 0, 0" />
                <Picker Margin="20, 10, 20, 20"
                        ItemsSource="{Binding Customers}"
                        ItemDisplayBinding="{Binding FirstName}"
                        SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"/>

                <Label Text="Selected Employee" Margin="20, 10, 0, 0" />
                <Picker Margin="20, 10, 20, 20"
                        ItemsSource="{Binding Employees}"
                        ItemDisplayBinding="{Binding FirstName}"
                        SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"/>

                <Label Text="Selected Status" Margin="20, 10, 0, 0" />
                <Picker Margin="20, 10, 20, 20"
                        ItemsSource="{Binding StatusOptions}"
                        SelectedItem="{Binding SelectedStatus, Mode=TwoWay}"/>

                <Button Text="Save Project" 
                    Margin="20, 10, 20, 20"
                    Command="{Binding SaveProjectCommand}" 
                    BackgroundColor="Green"
                    TextColor="White"/>
                <Button Text="Delete Project"
                        Margin="20, 10, 20, 20"
                        Command="{Binding DeleteProjectCommand}"
                        BackgroundColor="Red"
                        TextColor="White"/>

                <Button Text="Back"
                    Margin="20, 10, 20, 20"
                    Command="{Binding NavigateBackCommand}"
                    BackgroundColor="Yellow"
                    TextColor="Black"/>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>