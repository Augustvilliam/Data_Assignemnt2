<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.ProjectPage"
             Title="ProjectPage">
    <VerticalStackLayout>
        <CollectionView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="Grey" Padding="10" Margin="10" BackgroundColor="white">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding Status}" />
                            <Button Text="Details:" Command="{Binding ViewProjectCommand}" CommandParameter="{Binding Id}" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button 
            Text="Create Project"
            Command="{Binding AddProjectCommand}"
            Background="DarkOliveGreen"
            TextColor="White"/>

    </VerticalStackLayout>
</ContentPage>
    
